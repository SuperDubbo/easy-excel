            </table>
            <table tableDataKey="" class="" limit="">
                <column y="3" tableDataKey="column1"/>
                <column y="4" tableDataKey="column2"/>
            </table>
            <point x="0" y="5" tableDataKey="point1"/>
            <point x="0" y="6" tableDataKey="point2"/>
        </sheetMapping>
        <sheetMapping tableDataKey="bookSheet" index="1" name="Sheet2">
            <table tableDataKey="" class="" limit="">
                <column y="1" tableDataKey="column1"/>
                <column y="2" tableDataKey="column2"/>
            </table>
            <table tableDataKey="" class="" limit="">
                <column y="3" tableDataKey="column1"/>
                <column y="4" tableDataKey="column2"/>
            </table>
            <point x="0" y="5" tableDataKey="point1"/>
            <point x="0" y="6" tableDataKey="point2"/>
        </sheetMapping>
    </excelMapping>

    <excelMapping id="excel002" template="classpath:path/to/excelMapping/template">
        <sheetMapping tableDataKey="userSheet" index="0" name="Sheet1">
            <table tableDataKey="" class="" limit="" filters="filter001,filters001">
